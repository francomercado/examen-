// ejericios 6 1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()

{
	int s,i,n;
	do{
		cout<<"ingrese el numero de elementos";
		cin>>n;
	} while(n<0);
	s=0;
	for(i=1;i<=n;i++)
	{
		s=s+i;
	}
	cout<<"la suma de los numeros es:"<<s;
	getch();
}


